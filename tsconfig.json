{
  "compilerOptions": {
    "noEmit": true,
    "checkJs": true,
    "allowJs": true,
    "module": "ESNext",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "eslint"
    ],
  },
  "include": [
    "lib"
  ]
}
