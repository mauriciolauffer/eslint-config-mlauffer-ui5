{
  "name": "eslint-config-mlauffer-ui5",
  "version": "2.0.1",
  "description": "ESLint shareable config for UI5",
  "private": false,
  "author": "Mauricio Lauffer",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@9.12.2",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "prettier . --check --cache && eslint . --cache",
    "lint:ci": "eslint . -f @microsoft/eslint-formatter-sarif -o eslint.sarif",
    "pretty": "prettier . --write --cache",
    "test": "vitest run"
  },
  "keywords": [
    "eslint",
    "config",
    "javascript",
    "ui5",
    "openui5",
    "sapui5"
  ],
  "dependencies": {
    "eslint-config-mlauffer-nodejs": "^3.1.0",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "globals": "^16.0.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mauriciolauffer/eslint-config-mlauffer-ui5.git"
  },
  "bugs": {
    "url": "https://github.com/mauriciolauffer/eslint-config-mlauffer-ui5.git/issues"
  }
}
