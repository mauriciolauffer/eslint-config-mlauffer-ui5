{
  "name": "eslint-config-mlauffer-ui5",
  "version": "1.0.0",
  "description": "ESLint shareable config for UI5",
  "private": false,
  "author": "Mauricio Lauffer",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint lib --cache",
    "lint:ci": "eslint lib -f @microsoft/eslint-formatter-sarif -o eslint.sarif",
    "format": "prettier . --write --cache && npm run lint -- --fix",
    "test": "vitest run"
  },
  "keywords": [
    "eslint",
    "config",
    "javascript",
    "ui5",
    "openui5",
    "sapui5"
  ],
  "dependencies": {
    "eslint-config-mlauffer-nodejs": "^2.0.4",
    "eslint-plugin-no-unsanitized": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/config-inspector": "^0.5.1",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.9",
    "prettier": "^3.3.2",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "eslint": ">=8"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mauriciolauffer/eslint-config-mlauffer-ui5.git"
  },
  "bugs": {
    "url": "https://github.com/mauriciolauffer/eslint-config-mlauffer-ui5.git/issues"
  }
}
